{
	"name": "@realgolf/web",
	"version": "3.6.0",
	"author": "RealGolf.Games",
	"license": "All-Rights-Reserved",
	"private": true,
	"main": "server/app.js",
	"scripts": {
		"server": "node server/app.js",
		"server:dev": "nodemon server/app.js",
		"dev": "vite dev",
		"build:kit": "vite build",
		"build:server": "tsc server/app.ts --esModuleInterop --target esnext --moduleResolution node",
		"build": "pnpm run build:kit && pnpm run build:server",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"prepare": "husky",
		"precommit": ".husky/pre-commit",
		"start": "pnpm run build && pnpm run server",
		"extract": "svelte-i18n extract \"src/**/*.svelte\" src/locales/en.json"
	},
	"hooks": {
		"pre-commit": "pnpm run build && pnpm run format && pnpm run lint"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@types/bcrypt": "^5.0.2",
		"@types/dompurify": "^3.0.5",
		"@types/express": "^4.17.21",
		"@types/js-cookie": "^3.0.6",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.12.9",
		"@types/nodemailer": "^6.4.15",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"concurrently": "^8.2.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.38.0",
		"husky": "^9.0.11",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.2.15",
		"svelte-check": "^3.7.1",
		"svelte-eslint-parser": "^0.35.0",
		"svelte-fa": "^4.0.2",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
	},
	"type": "module",
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.5.2",
		"@fortawesome/free-regular-svg-icons": "^6.5.2",
		"@fortawesome/free-solid-svg-icons": "^6.5.2",
		"@sveltejs/adapter-node": "^5.0.1",
		"@types/jsonwebtoken": "^9.0.6",
		"autoprefixer": "^10.4.19",
		"bcrypt": "^5.1.1",
		"dompurify": "^3.1.2",
		"dotenv": "^16.4.5",
		"express": "^4.18.3",
		"js-cookie": "^3.0.5",
		"jsonwebtoken": "^9.0.2",
		"lint": "^1.1.2",
		"mongoose": "^8.3.3",
		"nanoid": "^5.0.7",
		"nodemailer": "^6.9.13",
		"postcss": "^8.4.38",
		"postcss-safe-parser": "^7.0.0",
		"sass": "^1.76.0",
		"socket.io": "^4.7.4",
		"socket.io-client": "^4.7.5",
		"svelte-i18n": "^4.0.0",
		"tailwindcss": "^3.4.3",
		"uuid": "^9.0.1"
	}
}
