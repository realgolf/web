{
	"name": "golf",
	"version": "3.3.1",
	"author": "RealGolf.Games",
	"license": "All-Rights-Reserved",
	"private": true,
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"dev": "vite dev",
		"build:kit": "vite build",
		"build:server": "tsc server.ts --esModuleInterop --target esnext --moduleResolution node",
		"build": "npm run build:kit && npm run build:server",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"prepare": "husky",
		"run:precommit": ".husky/pre-commit"
	},
	"hooks": {
		"pre-commit": "pnpm run build && pnpm run format && pnpm run lint"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/kit": "^2.5.3",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/dompurify": "^3.0.5",
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.28",
		"@types/uuid": "^9.0.8",
		"concurrently": "^8.2.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^9.0.11",
		"prettier": "^2.0.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.6",
		"svelte-fa": "^4.0.2",
		"tslib": "^2.4.1",
		"typescript": "^5.4.2",
		"vite": "^5.1.5"
	},
	"type": "module",
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.5.1",
		"@fortawesome/free-regular-svg-icons": "^6.5.1",
		"@fortawesome/free-solid-svg-icons": "^6.5.1",
		"@sveltejs/adapter-node": "^5.0.1",
		"autoprefixer": "^10.4.18",
		"bcrypt": "^5.1.1",
		"dompurify": "^3.0.9",
		"dotenv": "^16.4.5",
		"express": "^4.18.3",
		"jsonwebtoken": "^9.0.2",
		"lint": "^1.1.2",
		"mongoose": "^8.2.1",
		"nanoid": "^5.0.6",
		"postcss": "^8.4.35",
		"postcss-safe-parser": "^7.0.0",
		"sass": "^1.71.1",
		"socket.io": "^4.7.4",
		"socket.io-client": "^4.7.5",
		"tailwindcss": "^3.4.1",
		"uuid": "^9.0.1"
	}
}
